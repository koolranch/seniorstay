generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(uuid())
  name          String?
  email         String     @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  accounts      Account[]
  favorites     Favorite[]
  sessions      Session[]
}

model Favorite {
  id         String   @id @default(uuid())
  userId     String
  providerId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, providerId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Community {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  city        String
  city_slug   String?
  state       String
  description String?
  imageUrl    String?
  image_urls  String[] // Photo gallery support
  zip         String?
  address     String?
  phone       String?
  website     String?
  email       String?
  services    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Multi-region support
  region_slug  String   @default("cleveland")
  
  // Photo enrichment tracking
  photos_source        String?   // "facility_website", "caring.com", etc.
  photos_last_updated  DateTime?
  
  // CMS Certification and Official Data
  ccn                      String?   @unique
  facility_type            String?
  bed_count                Int?
  accepts_medicare         Boolean?  @default(false)
  accepts_medicaid         Boolean?  @default(false)
  
  // CMS Star Ratings (1-5)
  overall_rating           Decimal?
  health_inspection_rating Decimal?
  staffing_rating          Decimal?
  quality_rating           Decimal?
  
  // Quality Flags
  abuse_icon               Boolean?  @default(false)
  special_focus_facility   Boolean?  @default(false)
  last_inspection_date     DateTime?
  
  // Source Tracking
  cms_last_updated         DateTime?
  care_compare_url         String?
  
  // Payer Mix (from cost reports, Phase 4)
  medicaid_percentage      Decimal?
  
  // VBP Fields (Phase 4)
  vbp_participates         Boolean?  @default(false)
  vbp_payment_adjustment   Decimal?
  vbp_program_year         String?
  
  // Indexes for region-based queries
  @@index([region_slug])
  @@index([region_slug, city])
}

model Lead {
  id              String   @id @default(cuid())
  fullName        String
  email           String?
  phone           String?
  cityOrZip       String?
  careType        String?
  moveInTimeline  String?  
  notes           String?
  communityName   String?
  communityId     String?       // FK to Community if matched
  pageType        String?       // "location_page", "community_page", "contact", "assessment"
  sourceSlug      String?       // e.g., "westlake", "beachwood" (Cleveland suburb)
  city            String?
  state           String?
  address         String?
  services        String?
  urgencyScore    Int       @default(0)  // Calculated lead score (0-150+)
  priority        String    @default("normal") // "high", "normal", "low"
  alertSent       Boolean   @default(false)    // Track if high-priority alert was sent
  utmSource       String?   // UTM tracking
  utmMedium       String?
  utmCampaign     String?
  userAgent       String?   // Browser/device info
  ipAddress       String?   // For geo-location (hashed for privacy)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  status          String    @default("new") // "new", "contacted", "qualified", "converted", "lost"
  
  // Structured calculator data (JSONB)
  // Contains: homeValue, valueGap, propertyTax, totalHomeCost, seniorLivingCost, etc.
  meta_data       Json?     @db.JsonB
  
  // =========================================================================
  // COMMISSION & REFERRAL TRACKING
  // =========================================================================
  
  // Referral pipeline status
  referral_status           String    @default("new") // "new", "referral_sent", "tour_scheduled", "admitted", "paid"
  referral_sent_at          DateTime? // When referral notification was sent to community
  
  // Commission tracking (100% of first month's rent)
  estimated_commission      Decimal?  @db.Decimal(10, 2) // Based on city average pricing
  actual_commission         Decimal?  @db.Decimal(10, 2) // Final paid amount
  commission_paid_at        DateTime? // When commission was received
  
  // Community sales contact
  admissions_contact_email  String?   // Community sales director email
  admissions_contact_name   String?   // Community sales director name
  admissions_contact_phone  String?   // Community sales director phone
  
  // Financial readiness indicators (from calculator)
  is_high_value             Boolean   @default(false) // homeValue > $350k OR valueGap > $500/mo
  calculated_budget         Decimal?  @db.Decimal(10, 2) // Monthly budget from calculator
  home_value                Decimal?  @db.Decimal(12, 2) // Home value from calculator
  value_gap                 Decimal?  @db.Decimal(10, 2) // Monthly savings vs staying home
  
  // Tour tracking
  tour_scheduled_at         DateTime?
  tour_completed_at         DateTime?
  
  // Move-in tracking  
  admitted_at               DateTime?
  move_in_date              DateTime?
  
  // Notes for sales pipeline
  advisor_notes             String?   // Internal notes for follow-up
  
  @@index([email])
  @@index([urgencyScore])
  @@index([sourceSlug])
  @@index([createdAt])
  @@index([referral_status])
  @@index([is_high_value])
}
